{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "baseUrl": "src",
    "esModuleInterop": true,
    "paths": {
      "@routers/*": ["routers/*"],
      "@utils/*": ["utils/*"],
      "@models/*": ["models/*"],
      "@helpers/*": ["helpers/*"],
      "@middleware/*": ["middleware/*"]
    }
  }
}
